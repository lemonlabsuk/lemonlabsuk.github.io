{
  "AWSTemplateFormatVersion": "2010-09-09",

  "Description": "Lemon Labs CloudFront Distribution",

  "Parameters": {
    "AcmCertificateArn": {
      "Type": "String",
      "Description": "ARN of the SSL Certificate in AWS Certificate Manager"
    },
  },

  "Mappings": {
  },

  "Resources": {

    "CloudFrontRootAlias": {
       "Type": "AWS::Route53::RecordSetGroup",
       "Properties": {
          "HostedZoneName": "lemonlabs.io.",
          "RecordSets": [ {
            "Name": "lemonlabs.io.",
            "Type": "A",
            "AliasTarget": {
              "DNSName": { "Fn::GetAtt": [ "CloudFrontDistribution", "DomainName" ] },
              "HostedZoneId": "Z2FDTNDATAQYW2"
            }
          },{
            "Name" : "lemonlabs.io.",
            "Type" : "AAAA",
            "AliasTarget": {
              "DNSName": { "Fn::GetAtt": [ "CloudFrontDistribution", "DomainName" ] },
              "HostedZoneId": "Z2FDTNDATAQYW2"
            }
          }
         ]
       }
    },

    "CloudFrontDistribution": {
       "Type": "AWS::CloudFront::Distribution",
       "Properties": {
          "DistributionConfig": {
            "Aliases": [ "lemonlabs.io" ],
            "DefaultCacheBehavior": {
              "AllowedMethods": [ "DELETE", "GET", "HEAD", "OPTIONS", "PATCH", "POST", "PUT" ],
              "ForwardedValues": {
                "Headers": ["*"],
                "QueryString": true
              },
              "TargetOriginId": "github",
              "ViewerProtocolPolicy": "redirect-to-https"
            },
            "CacheBehaviors": [{
              "AllowedMethods": [ "DELETE", "GET", "HEAD", "OPTIONS", "PATCH", "POST", "PUT" ],
              "ForwardedValues": {
                "Headers": ["*"],
                "QueryString": true
              },
              "PathPattern": "/slack*",
              "TargetOriginId": "slack",
              "ViewerProtocolPolicy": "redirect-to-https"
            }],
            "Enabled": true,
            "Origins": [{
              "CustomOriginConfig": {
                "OriginProtocolPolicy": "match-viewer"
              },
              "DomainName": "lemonlabsuk.github.io",
              "Id": "github"
            },{
              "CustomOriginConfig": {
                "OriginProtocolPolicy": "match-viewer",
                "OriginSSLProtocols": [ "TLSv1.2" ]
              },
              "DomainName": "lemonlabs-slack-invite-page.herokuapp.com",
              "Id": "slack"
            }],
            "ViewerCertificate": {
              "AcmCertificateArn": { "Ref": "AcmCertificateArn" },
              "SslSupportMethod": "sni-only"
            }
          }
       }
    }
  }
}
